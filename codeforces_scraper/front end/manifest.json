{
    "manifest_version": 3,
    "name": "codeforce scraper",
    "version": "1.0",
    "description": "Opens a specified page when the extension icon is clicked.",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "https://codeforces.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icons/icon.png"
        }
    },
    "icons": {
        "128": "icons/icon.png"
    }
}